<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/title_bar"
    android:layout_height="@dimen/height68"
    android:background="@color/lightblue"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/marleft_right20"
        android:background="@color/transparent"
        android:orientation="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height48"
        >


        <ImageView
            android:id="@+id/iv_back_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marleft_right15"
            android:paddingRight="@dimen/marleft_right15"
            android:scaleType="center"
            android:src="@mipmap/title_back_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="重复"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize18" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/title_add_icon"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/marleft_right15"
            android:layout_marginRight="@dimen/marleft_right15"
            android:visibility="gone"
            />

        <ProgressBar
            android:id="@+id/pb_progressbar"
            android:layout_width="@dimen/marleft_right30"
            android:layout_height="@dimen/marleft_right30"
            android:src="@mipmap/title_add_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/marleft_right15"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/guijuhua"
            android:indeterminateDuration="3000"
            android:max="100"
            android:progress="22"
            android:visibility="gone"
            />


    </RelativeLayout>
</LinearLayout>