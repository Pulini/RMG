<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/marleft_right15"
        android:id="@+id/bill_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marleft_right15"
        android:text="提现"
        android:textColor="@color/color17"
        android:textSize="@dimen/textsize16"
        />

    <TextView
        android:layout_marginRight="@dimen/marleft_right15"
        android:id="@+id/bill_num"
        android:layout_marginTop="@dimen/marleft_right15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="+10"
        android:textColor="@color/lightblue"
        android:textSize="@dimen/textsize18"
        />

    <TextView
        android:layout_below="@+id/bill_type"
        android:id="@+id/bill_des"
        android:layout_marginTop="@dimen/marleft_right15"
        android:layout_marginLeft="@dimen/marleft_right15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已经成功提现到支付宝"
        android:textSize="@dimen/textsize14"
        android:textColor="@color/color66"
        />

    <TextView
        android:layout_below="@+id/bill_type"
        android:id="@+id/bill_date"
        android:layout_marginTop="@dimen/marleft_right18"
        android:layout_marginRight="@dimen/marleft_right15"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03-16 17:05"
        android:textSize="@dimen/textsize10"
        android:textColor="@color/color99"
        />



</RelativeLayout>