<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/home_title"/>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_lalalal"
        android:layout_below="@+id/title_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/marleft_right15"
        >
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="@dimen/height80"
            android:layout_height="@dimen/height80"
            android:src="@mipmap/icon_jieshu"
            />

        <LinearLayout
            android:layout_marginLeft="@dimen/marleft_right15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightblue"
                android:textSize="@dimen/textsize16"
                android:text="已签收"
                />

            <TextView
                android:id="@+id/tv_express_delivery_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marleft_right15"
                android:text="韵达快递：4546448558888"
                android:textSize="@dimen/textsize12"
                android:textColor="@color/color99"
                />

            <TextView
                android:id="@+id/tv_express_delivery_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marleft_right15"
                android:text="客服电话：95500"
                android:textSize="@dimen/textsize12"
                android:textColor="@color/color99"
                />

        </LinearLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/txt_wlgz"
        android:layout_marginTop="@dimen/marleft_right15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_lalalal"
        android:text="物流跟踪"
        android:layout_marginLeft="@dimen/marleft_right15"
        android:textColor="@color/color66"
        android:textSize="@dimen/textsize14"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/white"
        android:layout_marginTop="@dimen/marleft_right15"
        android:layout_marginLeft="@dimen/marleft_right15"
        android:layout_marginRight="@dimen/marleft_right15"
        android:layout_below="@+id/txt_wlgz"
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>