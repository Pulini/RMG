<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_margin="@dimen/marleft_right15"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/textcolor_black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_name"
                android:text="lalala"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/marleft_right15"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone"
                android:layout_marginTop="@dimen/marleft_right15"
                android:layout_marginBottom="@dimen/marleft_right15"
                android:text="111111"
                android:layout_marginLeft="@dimen/marleft_right30"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/textcolor_black"
                />



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111"
            android:layout_marginLeft="@dimen/marleft_right15"
            android:layout_marginBottom="@dimen/marleft_right15"
            android:layout_marginRight="@dimen/marleft_right15"
            android:id="@+id/tv_address_detail"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/textcolor_black"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f8"
            android:layout_marginLeft="@dimen/marleft_right15"
            android:layout_marginRight="@dimen/marleft_right15"

            />

        <RelativeLayout
            android:layout_marginTop="@dimen/height10"
            android:layout_marginBottom="@dimen/height10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <CheckBox
                android:layout_marginLeft="@dimen/marleft_right15"
                android:layout_centerVertical="true"
                android:id="@+id/cb_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_box_bg"/>


            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cb_choice"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/textcolor_black"
                android:layout_marginLeft="@dimen/marleft_right15"
                android:text="设为默认地址"

                />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="@dimen/height60"
                android:layout_height="@dimen/marleft_right30"
                android:text="删除"
                android:gravity="center"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/color66"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/marleft_right15"
                android:background="@drawable/shape_stroke_btn_small_conner_gray_bg"
                />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="@dimen/height60"
                android:layout_height="@dimen/marleft_right30"
                android:text="编辑"
                android:gravity="center"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/color66"
                android:layout_marginRight="@dimen/marleft_right15"
                android:layout_toLeftOf="@+id/tv_delete"
                android:background="@drawable/shape_stroke_btn_small_conner_gray_bg"
                />



        </RelativeLayout>
    </LinearLayout>
</LinearLayout>