<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/home_title"/>

    <RelativeLayout
        android:layout_below="@+id/title_bar"
        android:background="@color/color_fa"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/failed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marleft_right160"
        />

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marleft_right160"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_payfailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付失败"
        android:textSize="@dimen/textsize18"
        android:textColor="@color/textcolor_black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_failed"
        android:layout_marginTop="@dimen/marleft_right41"
        />

    <TextView
        android:id="@+id/tv_paysuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付成功"
        android:textSize="@dimen/textsize18"
        android:textColor="@color/textcolor_black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_success"
        android:layout_marginTop="@dimen/marleft_right45"
        />

    <Button
        android:id="@+id/btn_seeOrder"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_paysuccess"
        android:layout_marginTop="@dimen/marleft_right45"
        android:layout_centerHorizontal="true"
        android:text="查看订单"
        android:textColor="@color/lightblue"
        android:textSize="@dimen/textsize16"
        android:background="@drawable/shape_stroke_btn_bg_blue"/>



</RelativeLayout>