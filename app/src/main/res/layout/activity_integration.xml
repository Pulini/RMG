<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/home_title"/>

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/integration_bg"
        android:layout_below="@+id/title_bar"
        android:layout_marginRight="@dimen/marleft_right5"
        android:layout_marginLeft="@dimen/marleft_right5"
        />

    <RelativeLayout
        android:id="@+id/rl_llll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marleft_right15"
        android:layout_below="@+id/title_bar"
        android:layout_marginRight="@dimen/marleft_right5"
        android:layout_marginLeft="@dimen/marleft_right5"
        >

        <TextView
            android:id="@+id/txt_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marleft_right25"
            android:layout_marginTop="@dimen/marleft_right25"
            android:text="积分"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/textcolor_black"
            />


        <TextView
            android:id="@+id/tv_integration_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6000"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/textsize40"
            android:layout_marginTop="@dimen/marleft_right20"
            android:layout_below="@+id/txt_jifen"
            android:layout_marginLeft="@dimen/marleft_right25"

            />

    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_marginLeft="@dimen/marleft_right15"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>





</RelativeLayout>