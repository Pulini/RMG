<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/marleft_right15"
        android:layout_marginBottom="@dimen/marleft_right15"
        android:id="@+id/rl_product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/marleft_right15"
        android:layout_marginLeft="@dimen/marleft_right15"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/iv_product_image"
            android:src="@mipmap/ic_launcher"
            android:scaleType="center"
            />
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/marleft_right15"
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保湿润眼干涩眼镜"
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/textsize14"

                />



            <TextView
                android:id="@+id/tv_money_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marleft_right15"
                android:layout_marginTop="@dimen/marleft_right30"
                android:text="@string/money_type"
                android:layout_below="@+id/tv_product_name"
                android:textSize="@dimen/textsize12"
                android:textColor="@color/textcolor_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_money_tag"
                android:layout_alignBottom="@+id/tv_money_tag"
                android:text="698"
                android:textSize="14sp"
                android:textColor="@color/textcolor_black"
                android:id="@+id/tv_price"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_num"
                android:text="x1"
                android:layout_alignBottom="@+id/tv_money_tag"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/color99"
                android:layout_marginTop="@dimen/marleft_right5"
                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>