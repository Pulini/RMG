<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_marginLeft="@dimen/marleft_right15"
        android:layout_marginRight="@dimen/marleft_right15"
        android:layout_marginTop="@dimen/marleft_right25"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:text="张睿"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/textcolor_black"
            />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13587894545"
            android:layout_marginLeft="@dimen/marleft_right60"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/textcolor_black"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_address"
        android:layout_marginLeft="@dimen/marleft_right15"
        android:layout_marginRight="@dimen/marleft_right15"
        android:layout_below="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize14"
        android:textColor="@color/textcolor_black"
        android:layout_marginTop="@dimen/marleft_right15"
        android:text="北京市昌平区沙河镇万家灯火装饰城7610"
        />

    <View
        android:id="@+id/v_diver"
        android:layout_below="@+id/tv_address"
        android:layout_margin="@dimen/marleft_right15"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color99"/>

    <RelativeLayout
        android:layout_marginLeft="@dimen/marleft_right15"
        android:layout_marginRight="@dimen/marleft_right15"
        android:layout_below="@+id/v_diver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_choice_default_address"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box_bg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cb_choice_default_address"
            android:layout_marginLeft="@dimen/marleft_right15"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/textcolor_black"
            android:text="设为默认地址"
            />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/marleft_right60"
            android:layout_height="28dp"
            android:background="@drawable/select_address_btn_bg"
            android:text="删除"
            android:textColor="@color/color66"
            android:textSize="@dimen/textsize14"
            android:layout_alignParentRight="true"

            />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/marleft_right60"
            android:layout_height="28dp"
            android:background="@drawable/select_address_btn_bg"
            android:text="编辑"
            android:textColor="@color/color66"
            android:textSize="@dimen/textsize14"
            android:layout_toLeftOf="@+id/btn_delete"
            android:layout_marginRight="@dimen/marleft_right15"

            />

    </RelativeLayout>

</RelativeLayout>