<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="@dimen/marleft_right15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请好友"
        android:id="@+id/tv_origin"
        android:textSize="@dimen/textsize16"
        android:textColor="@color/color17"
        />

    <TextView
        android:id="@+id/tv_integration_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10"
        android:textSize="@dimen/textsize18"
        android:textColor="@color/lightblue"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/marleft_right15"

        />

    <TextView
        android:id="@+id/tv_integrtation_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成功邀请好友并注册"
        android:layout_below="@+id/tv_origin"
        android:textSize="@dimen/textsize14"
        android:textColor="@color/color66"
        android:layout_marginTop="@dimen/marleft_right10"
        android:layout_marginBottom="@dimen/marleft_right15"

        />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03-16 17:05"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_integrtation_des"
        android:textSize="@dimen/textsize10"
        android:textColor="@color/color99"
        />

</RelativeLayout>