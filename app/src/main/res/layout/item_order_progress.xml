<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/height100"
    android:background="@color/white"
    >

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_state_line"
        android:layout_width="@dimen/marleft_right12"
        android:layout_height="@dimen/height100"
        android:layout_marginLeft="@dimen/marleft_right15">

        <View
            android:id="@+id/v_progress_top_line"
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:background="@drawable/shape_circle_gray"
            android:layout_centerHorizontal="true"
            />
        <View
            android:layout_below="@+id/v_progress_top_line"
            android:layout_marginTop="@dimen/marleft_right3"
            android:layout_width="1dp"
            android:layout_height="@dimen/height96"
            android:background="@color/colorc6"
            android:layout_centerHorizontal="true"
            android:id="@+id/v_progress_bottom_line"
            />

        <ImageView
            android:layout_marginTop="@dimen/marleft_right5"
            android:src="@mipmap/currentorderprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_current_pgress"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:layout_marginTop="@dimen/marleft_right5"
            android:background="@drawable/shape_circle_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_stale_pgress"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginLeft="@dimen/marleft_right15"
        android:layout_toRightOf="@+id/rl_state_line"
        android:layout_marginRight="@dimen/marleft_right15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height100"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已签收"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/color99"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_marginTop="@dimen/marleft_right10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-02-28 19:45"
            android:textSize="@dimen/textsize12"
            android:textColor="@color/color99"
            />

    </LinearLayout>



</RelativeLayout>