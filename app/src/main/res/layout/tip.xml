<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height40"
        android:layout_marginRight="@dimen/height40"
        android:background="@color/color_whitee6"
        app:cardCornerRadius="@dimen/dp_12"
        app:cardElevation="0.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_whitee6">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height10"
                android:text="温馨提示"
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/tv_tip"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:paddingLeft="@dimen/height10"
                android:paddingRight="@dimen/height10"
                android:paddingTop="5dp"
                android:text="您的账号于另一台手机上登录或登录失效"
                android:textColor="@color/color66"
                android:textSize="@dimen/textsize12" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_tip"
                android:layout_marginTop="5dp"
                android:background="#dadada" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:gravity="center"
                android:padding="@dimen/height10"
                android:text="重新登录"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/textsize12" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>