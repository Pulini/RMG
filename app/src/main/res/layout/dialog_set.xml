<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marleft_right25"
        android:layout_marginRight="@dimen/marleft_right25"
        android:background="@drawable/shape_layout_conner_white_bg">



        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/marleft_right5"
            android:paddingLeft="@dimen/marleft_right25"
            android:paddingRight="@dimen/marleft_right25"
            android:layout_marginTop="@dimen/marleft_right35"
            android:layout_marginBottom="@dimen/marleft_right35"
            android:hint="请输入雾化量（1-50）"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize18" />

        <include
            android:id="@+id/view2"
            layout="@layout/lineview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/marleft_right1"
            android:layout_below="@id/et_number"
             />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height44"
            android:layout_below="@id/view2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_gray8d"
                android:textSize="@dimen/textsize18"

                />

            <include layout="@layout/verticalview" />


            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/lightblue"
                android:textSize="@dimen/textsize18"

                />


        </LinearLayout>




    </RelativeLayout>

</RelativeLayout>