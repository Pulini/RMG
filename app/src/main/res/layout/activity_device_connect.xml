<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/blue_title"/>

    <RelativeLayout
        android:layout_below="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/pb_Circle"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/progress_indeterminate_gear"
            android:indeterminateDuration="3000"
            android:max="100"
            android:progress="22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/pb_Circle"
            android:text="@string/connecting_device_des"
            android:gravity="center"
            android:textSize="@dimen/textsize20"
            android:textColor="@color/textcolor_black"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connecting_device"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/color66"
            />
    </RelativeLayout>


</RelativeLayout>